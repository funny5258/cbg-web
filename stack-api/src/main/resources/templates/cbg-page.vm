#set($layout="layout/none.vm")
<table class="table table-hover table-bordered margin-bottom-5">
    <thead>
    <tr>
        <th style="text-align: center;width: 5%;">角色</th>
        <th style="text-align: center;width: 12%;">名字</th>
        <th style="text-align: center;width: 10%;">等级</th>
        <th style="text-align: center;width: 7%;">价格</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 8%;">装评/修为</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 8%;">加护/炼护</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 8%;">追电/疾语</th>
        <th style="text-align: center;width: 25%;">您关注的</th>
        <th style="text-align: center;width: 14%;">购买</th>
    </tr>
    </thead>
    <tbody>
        #if($!pageBean && $!pageBean.total > 0)
            #foreach($role in $!roleList)
            <tr>
                <td style="text-align: center;">
                    <img src="http://res.tx3.cbg.163.com/images/role/smallface/$!role.sch$!{role.sex}.jpg">
                </td>
                <td style="text-align: center;">$!role.name</td>
                <td style="text-align: center;">
                    #if($role.flySoulPhase == 0)
                        <label>$!role.lvText</label>
                    #elseif($role.flySoulPhase == 1)
                        <label style="color: #009abf">$!role.lvText</label>
                    #elseif($role.flySoulPhase == 2)
                        <label style="color: #e64784;">$!role.lvText</label>
                    #end
                </td>
                <td style="text-align: center;">¥ <font color="red">$!role.price</font></td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.equXiuwei <br>$!role.xiuwei</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.jiahu / $!role.lianhu</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.movespeed / $!role.castspeed</td>
                <td style="text-align: center;">
                        $!role.shizhuang
                        $!role.teji
                        $!role.yuanhun
                        $!role.other
                <td style="text-align: center;">
                    <a class="btn btn-primary" onclick="CbgJS.buy('$!role.id','$!role.url')">购买</a>
                    <a class="btn btn-info" onclick="CbgJS.detail('$!role.id','$!role.name','$!role.lv','$!role.sch')">英雄榜</a>
                    #if($!showDelBtn==1)
                        <a class="btn btn-danger" onclick="CbgJS.soldOut('$!role.id')">下架</a>
                    #end
                </td>
            </tr>
            #end
        #else
        <tr>
            <td colspan="22" style="text-align: center">搜索无结果</td>
        </tr>
        #end
    </tbody>
</table>
#if($!pageBean && $!pageBean.total > 0)
<div class="row">
    <div class="col-md-6 pull-left hidden-xs">
        <p style="margin-bottom: 0px;line-height: 55px;">总共$!pageBean.total个记录&nbsp;每页$!pageBean.pageSize
            &nbsp;当前$!pageBean.pageNum/$!pageBean.pages</p>
    </div>

    <div class="col-md-6 pull-right" id="js-bootpag" style="text-align: right;"></div>

    <script type="text/javascript">
        CbgJS.initPage('$!pageBean.pages', '$!pageBean.pageNum');
    </script>
</div>
#end