#set($layout="layout/none.vm")
<table class="table table-hover table-bordered margin-bottom-5">
    <thead>
    <tr>
        <th style="text-align: center;width: 12%;">服务器</th>
        <th style="text-align: center;width: 8%;">名字</th>
        <th style="text-align: center;width: 8%;">英雄榜ID</th>
        <th style="text-align: center;width: 6%;">门派</th>
        <th style="text-align: center;width: 4%;">等级</th>
        <th style="text-align: center;width: 8%;">装评</th>
        <th style="text-align: center;width: 8%;">修为</th>
        <th style="text-align: center;width: 10%;">属性</th>
    </tr>
    </thead>
    <tbody>
        #if($!pageBean && $!pageBean.total > 0)
            #foreach($role in $!roleList)
            <tr>
                <td style="text-align: center;">$!role.server</td>
                <td style="text-align: center;">$!role.name</td>
                <td style="text-align: center;">$!role.roleId</td>
                <td style="text-align: center;">$!role.schoolText</td>
                <td style="text-align: center;">$!role.level</td>
                <td style="text-align: center;">$!role.equXiuwei</td>
                <td style="text-align: center;">$!role.xiuwei</td>
                <td style="text-align: center;">
                    <a class="btn btn-primary" onclick="window.open('http://bang.tx3.163.com/bang/role/' + '$!role.roleId')">属性</a>
                </td>
            </tr>
            #end
        #else
        <tr>
            <td colspan="7" style="text-align: center">搜索无结果</td>
        </tr>
        #end
    </tbody>
</table>
#if($!pageBean && $!pageBean.total > 0)
<div class="row">
    <div class="col-md-6 pull-left hidden-xs">
        <p style="margin-bottom: 0px;line-height: 55px;">总共$!pageBean.total个记录&nbsp;每页$!pageBean.pageSize
            &nbsp;当前$!pageBean.pageNum/$!pageBean.pages</p>
    </div>

    <div class="col-md-6 pull-right" id="js-bootpag" style="text-align: right;"></div>

    <script type="text/javascript">
        BangJS.initPage('$!pageBean.pages', '$!pageBean.pageNum');
    </script>
</div>
#end