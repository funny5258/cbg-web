#set($layout="layout/none.vm")
<table class="table table-hover table-bordered margin-bottom-5">
    <thead>
    <tr>
        <th style="text-align: center;width: 8%;">角色</th>
        <th style="text-align: center;width: 11%;">名字</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 5%;">等级</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 7%;">价格</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 6%;">装评</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 5%;">修为</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 5%;">加护</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 5%;">炼护</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 5%;">追电</th>
        <th class="hidden-sm hidden-xs" style="text-align: center;width: 5%;">疾语</th>
        <th style="text-align: center;width: 40%;">您关注的</th>
        <th style="text-align: center;width: 8%;">购买</th>
    </tr>
    </thead>
    <tbody>
        #if($!pageBean && $!pageBean.total > 0)
            #foreach($role in $!roleList)
            <tr>
                <td style="text-align: center;">
                    <img src="http://res.tx3.cbg.163.com/images/role/smallface/$!role.sch$!{role.sex}.jpg">
                </td>
                <td style="text-align: center;">$!role.name</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.lv</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">¥ <font color="red">$!role.price</font></td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.equXiuwei</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.xiuwei</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.jiahu</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.lianhu</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.movespeed</td>
                <td class="hidden-sm hidden-xs" style="text-align: center;">$!role.castspeed</td>
                <td style="text-align: center;">
                        $!role.shizhuang
                        $!role.teji
                        $!role.yuanhun
                        $!role.other
                <td style="text-align: center;"><a class="btn btn-danger" onclick="window.open('$!role.url')">购买</a></td>
            </tr>
            #end
        #else
        <tr>
            <td colspan="22" style="text-align: center">搜索无结果</td>
        </tr>
        #end
    </tbody>
</table>
#if($!pageBean && $!pageBean.total > 0)
<div class="row">
    <div class="col-md-6 pull-left hidden-xs">
        <p style="margin-bottom: 0px;line-height: 55px;">总共$!pageBean.total个记录&nbsp;每页$!pageBean.pageSize
            &nbsp;当前$!pageBean.pageNum/$!pageBean.pages</p>
    </div>

    <div class="col-md-6 pull-right" id="js-bootpag" style="text-align: right;"></div>

    <script type="text/javascript">
        RoleJS.initPage('$!pageBean.pages', '$!pageBean.pageNum');
    </script>
</div>
#end